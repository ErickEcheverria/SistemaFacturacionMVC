@model SistemaFacturacionMVC.Models.Producto
@{
    ViewData["Title"] = "Añadir Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Producto</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="tipo_producto" class="control-label"></label>
                    <input asp-for="tipo_producto" class="form-control" />
                    <span asp-validation-for="tipo_producto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="nombre" class="control-label"></label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="descripcion" class="control-label"></label>
                    <input asp-for="descripcion" class="form-control" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="precio" class="control-label"></label>
                    <input id="precio" onchange="analizarP();" asp-for="precio" class="form-control" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="costo" class="control-label"></label>
                    <input id="costo" onchange="analizarC();" asp-for="costo" class="form-control" />
                    <span asp-validation-for="costo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="existencia" class="control-label"></label>
                    <input id="existencia" onchange="analizarE();" asp-for="existencia" class="form-control" />
                    <span asp-validation-for="existencia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="activo" class="control-label"></label>
                    @*<input asp-for="activo" class="form-control" />*@
                    <select asp-for="activo" class="form-control">
                        <option value="S" selected>S</option>
                        <option value="N">N</option>
                    </select>
                    <span asp-validation-for="activo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Añadir Producto" class="btn btn-primary" />
                </div>
            </form>
            <hr />
            <center>
                <div class="col-sm-10">
                    <a class="btn btn-danger d-block" asp-action="Index" asp-controller="Productos">Regresar</a>
                </div>
            </center>
        </div>
    </div>
</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}

<script>

    let precio = document.getElementById('precio');
    let costo = document.getElementById('costo');
    let existencia = document.getElementById('existencia');

    function analizarP() {
        if (precio.value <= 0) {
            alert("El precio No puede ser menor o igual a 0 \nVerifique el precio nuevamente")
            precio.value = "";
            return;
        }
    }

    function analizarC() {
        if (costo.value <= 0) {
            alert("El costo No puede ser menor o igual a 0 \nVerifique el costo nuevamente")
            costo.value = "";
            return;
        }
    }

    function analizarE() {
        if (existencia.value < 0) {
            alert("La existencia No puede ser menor a 0 \nVerifique la existencia nuevamente")
            existencia.value = "";
            return;
        }
    }


</script>

