@model SistemaFacturacionMVC.Models.Factura_Producto
@{
    ViewData["Title"] = "Eliminar Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar Compra</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteDetalle">

                <input type="hidden" asp-for="numero_factura" />
                <input type="hidden" asp-for="codigo_producto" />

                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" value="@TempData["NoFactura"]" readonly="readonly" />
                </div>

                <div class="form-group">
                    <label class="control-label"></label>
                    <select id="listaProductos" class="form-control" asp-items="ViewBag.productos" readonly="readonly"></select>
                </div>

                <div class="form-group">
                    <label asp-for="cantidad" class="control-label"></label>
                    <input id="cantidad" asp-for="cantidad" class="form-control" min="1" step="1" readonly="readonly"/>
                    <span asp-validation-for="cantidad" class="text-danger"></span>


                </div>

                <div class="form-group">
                    <label asp-for="precio_unitario" class="control-label"></label>
                    <input id="precio" asp-for="precio_unitario" class="form-control" value="@TempData["precioUnitario"]" readonly="readonly" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-danger" />
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

