@model SistemaFacturacionMVC.Models.Factura
@{
    ViewData["Title"] = "Añadir Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Factura</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="codigo_cliente" class="control-label"></label>
                    <select asp-for="codigo_cliente" class="form-control" asp-items="ViewBag.nit"></select>
                </div>

                <div class="form-group">
                    <label asp-for="fecha" class="control-label"></label>
                    <input asp-for="fecha" class="form-control" />
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="total_factura" class="control-label"></label>
                    <input asp-for="total_factura" class="form-control" value="0.00" disabled />
                    <span asp-validation-for="total_factura" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="anulada" class="control-label"></label>
                    <select asp-for="anulada" class="form-control">
                        <option value="S">S</option>
                        <option value="N" selected>N</option>
                    </select>
                    <span asp-validation-for="anulada" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Añadir Detalle" class="btn btn-primary" />
                </div>
            </form>
            <hr />
            <center>
                <div class="col-sm-10">
                    <a class="btn btn-danger d-block" asp-action="Index" asp-controller="Facturas">Regresar</a>
                </div>
            </center>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

